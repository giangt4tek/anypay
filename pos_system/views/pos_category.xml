<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- FORM VIEW -->
  <record id="view_pos_category_from" model="ir.ui.view">
    <field name="name">pos.category.form</field>
    <field name="model">pos.category</field>
    <field name="arch" type="xml">
      <form string="Thông tin POS">
        <sheet>
          <header>
              <button name="set_is_active_account" string="Active" class="oe_highlight" type="object"/>
          </header>
          <group>
            <field name="pos_name" required="1"/>
            <field name="pos_user" required="1"/>
            <field name="bank_code" required="1"/>
            <field name="bank_acc" required="1"/>
             <field name="is_active"/>
          </group>
          <group>
             <field name="client_key" readonly="1"/>
              <div class="mt-2">
                <button name="generate_key"
                        type="object"
                        string="Tạo Key định danh POS"
                        class="btn btn-primary"/>
              </div>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- LIST VIEW -->
  <record id="view_pos_category_list" model="ir.ui.view">
    <field name="name">pos.category.list</field>
    <field name="model">pos.category</field>
    <field name="arch" type="xml">
      <list string="Danh sách POS">
          <field name="pos_name"/>
          <field name="pos_user"/>
          <field name="client_key"/>
          <field name="bank_code"/>
          <field name="bank_acc"/>
          <field name="is_active"/>
      </list>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_pos_category" model="ir.actions.act_window">
    <field name="name">Quản lý hệ thống POS</field>
    <field name="res_model">pos.category</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_pos_category_list"/>
  </record>

  
</odoo>
