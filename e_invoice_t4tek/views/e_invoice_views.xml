<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_e_invoice_template" model="ir.actions.act_window">
        <field name="name">Templates</field>
        <field name="res_model">e_invoice_t4tek.e_invoice.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a template
            </p>
            <p>
                A e_invoice template is used when sending invoices to e_invoice in order to know which
                invoice template to use when rendering the invoice.
            </p>
        </field>
    </record>

    <record id="action_e_invoice_symbol" model="ir.actions.act_window">
        <field name="name">Symbols</field>
        <field name="res_model">e_invoice_t4tek.e_invoice.symbol</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a symbol
            </p>
            <p>
                A e_invoice symbol is used when sending invoices to e_invoice in order to generate the
                invoice sequence.
            </p>
        </field>
    </record>

    <menuitem id="l10n_vn_edi_e_invoice_menu" name="e_invoice" groups="account.group_account_manager"
              parent="account.menu_finance_configuration" sequence="99">
        <menuitem id="l10n_vn_edi_e_invoice_templates" action="action_e_invoice_template"/>
        <menuitem id="l10n_vn_edi_e_invoice_symbols" action="action_e_invoice_symbol"/>
    </menuitem>
</odoo>
